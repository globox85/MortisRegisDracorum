import java.awt.*;

import javax.swing.*;


public class ClassInfo extends JFrame {

	public ClassInfo(String string) {
		JPanel panel = new JPanel();
		JButton ok_button = new JButton("OK");
		JTextArea description_text = new JTextArea();
		
		panel.setLayout(new GridLayout(2,1));
		panel.add(description_text);
		panel.add(ok_button);
		
		this.setTitle("Description - Warrior");
		this.setSize(150,300);
		
		if(string == "Warrior" ){
			description_text.setText("The Warrior is a damage-focused class.");
		}
		
	}

}
